{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Yorum",
  "scopeName": "source.yorum",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#constants" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.yorum",
          "match": "//.*$"
        },
        {
          "name": "comment.block.yorum",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comments" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.yorum",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.yorum",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.yorum",
          "match": "'(\\\\.|[^\\\\'])'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.yorum",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.yorum",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.yorum",
          "match": "\\b(if|else|while|for|in|return|match|break|continue|spawn)\\b"
        },
        {
          "name": "keyword.declaration.yorum",
          "match": "\\b(fn|let|mut|struct|enum|impl|trait|module|import|pub|const)\\b"
        },
        {
          "name": "keyword.other.yorum",
          "match": "\\b(requires|ensures|effects|pure|and|or|not)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.yorum",
          "match": "\\b(int|float|bool|char|string|unit|Self)\\b"
        },
        {
          "name": "support.type.yorum",
          "match": "\\b(Task|Chan|Map)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.yorum",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.yorum",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.yorum",
          "match": "(->|==|!=|<=|>=|<|>|\\+|-|\\*|/|%|=)"
        }
      ]
    }
  }
}
