// http_client.yrm â€” DNS resolution and HTTP client.
//
// Demonstrates: dns_resolve, http_get, http_post, http_request.
// Note: requires network access to run.

fn main() -> int {
    // DNS resolution
    let ip: string = dns_resolve("example.com");
    print_str("Resolved IP:");
    print_str(ip);

    // HTTP GET request
    let body: string = http_get("http://example.com");
    print_str("GET response length:");
    print_int(str_len(body));

    // HTTP POST request
    let resp: string = http_post("http://httpbin.org/post", "hello=world");
    print_str("POST response length:");
    print_int(str_len(resp));

    // Custom HTTP request with headers
    let custom: string = http_request(
        "GET",
        "http://example.com",
        "Accept: text/html",
        ""
    );
    print_str("Custom request response length:");
    print_int(str_len(custom));

    return 0;
}